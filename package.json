{
  "name": "harmonic",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addon-storyshots": "^6.2.8",
    "@storybook/addon-storyshots-puppeteer": "^6.2.8",
    "@storybook/node-logger": "^6.2.8",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.8",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.39",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.9",
    "cross-env": "^7.0.3",
    "eslint-config-standard-jsx": "^10.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "polished": "^4.1.1",
    "puppeteer": "^3.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.3",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --testPathIgnorePatterns=src/visual-test.spec.ts",
    "test:ci": "cross-env CI=true npm test",
    "test:staged": "npm run test:ci --findRelatedTests",
    "test:coverage": "npm run test:ci --coverage",
    "test:visual": "npm run build-storybook && cross-env CI=true react-scripts test visual-test.spec.ts",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "fix": "npm run lint -- --fix",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "standard-jsx",
      "standard-react",
      "react-app",
      "react-app/jest"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "import/no-default-export": "error",
      "react/react-in-jsx-scope": "off",
      "react/jsx-max-props-per-line": "error",
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-default-export": "off",
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
